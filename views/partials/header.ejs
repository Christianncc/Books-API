      font-weight: normal; /* Adjust if you have specific weights */
      font-style: normal; /* Adjust if you have specific styles */
    }

    
  </style>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            vuejss: "#09ed46"
          },
          screens: {
            sm: '480px',
            md: '768px',
            lg: '976px',
            xl: '1440px',
       
