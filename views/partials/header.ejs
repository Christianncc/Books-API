  <div class="absolute top-0 left-0 w-full h-full bg-library bg-center bg-cover">
      <div class="absolute top-0 left-0 w-full h-full bg-[#5b4e42] opacity-50"></div>
  </div>

  <!-- Navigation Bar -->
  <div class="w-full h-[4rem] bg-[#5b4e42] z-10 relative flex items-center px-4" style="background-color: rgba(91, 78, 66, 0.795);">
      <!-- Logo -->
      <h1 class="text-[clamp(16px,2vw,3vw)] font-gatwick text-[#ffebad] font-bold mr-auto cursor-pointer">
        <a href="/">TALESCAPE</a>
      </h1> 

      <!-- Navigation menu -->
      <div class="hidden md:flex MyFonts text-[clamp(10px,1vw,1vw)] font-gatwick text-[#ffebad] flex-row space-x-6 font-bold ml-10">
          <h3 class="hover:underline underline-offset-8 hover:text-[#aa9d6f] transition-all duration-200 cursor-pointer"><a href="/explore">
