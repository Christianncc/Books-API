            mountain: "url('/images/mountain-landscape-silhouette-vector-Graphics-42717875-1.jpg')",
            library: "url('/images/library.jpeg')",
            comics: "url('/images/comics.jpg')",
            burntpaper: "url('/images/grunge-paper-background_1048-10849.jpg')",
